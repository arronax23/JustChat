@page
@model JustChat.Pages.Authentication.RegisterModel
@{
}

<form method="post">
    <div class="row">
        <div class="col s3">
        </div>
        <div class="col s6 input-field">
            <label asp-for="UserVM.Username"></label>
            <input asp-for="UserVM.Username" />
            @*<span asp-validation-for="UserVM.Username"></span>*@
        </div>
        <div class="col s3">
        </div>
    </div>
    <div class="row">
        <div class="col s3">
        </div>
        <div class="col s6 input-field">
            <label asp-for="UserVM.Password"></label>
            <input type="password" asp-for="UserVM.Password" />

        </div>
        <div class="col s3">
        </div>
    </div>
    <div class="center-align">
        <button type="submit" class="waves-effect waves-light btn">Register</button>
    </div>
</form>


@foreach (var error in Model.Errors)
{
    <div class="auth-error-message">
        <span >@error</span>
    </div>
}

